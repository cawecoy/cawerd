<p id="notice"><%= notice %></p>

<h1>User:</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h1>Pages:</h1>

<% if @pages.any? %>
	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>URL</th>
	      <th>Access at</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @pages.each do |page| %>
	      <tr>
	        <td><%= page.title %></td>
	        <td><%= page.url %></td>
	        <td><%= page.access_at %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<p>No page access until now</p>
<% end %>

<%= link_to 'Back', users_path %>
