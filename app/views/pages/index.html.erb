<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<% if @pages.any? %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Access at</th>
        <th>User unique ID</th>
        <th>User email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.url %></td>
          <td><%= page.access_at %></td>
          <td><%= page.uid %></td>
          <td>
            <% if !page.user_id.nil? %>
              <%= page.user.email %>
            <% else %>
              Desconhecido
            <% end %>
          </td>
          <td><%= link_to 'Show', page %></td>
          <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p>No page<p>

<% end %>
